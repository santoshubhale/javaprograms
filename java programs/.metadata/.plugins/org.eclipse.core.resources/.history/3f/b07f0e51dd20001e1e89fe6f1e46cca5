package com.java.src;

public class Palindrome {
	public static void main(String[] args) {
		int number = 121;
		int temp = number;
		int rev = 0;

		while (number > 0) {
			int num = number % 10;
			int tem = number / 10;
			rev = (tem * 10) + num;
			
			if(number==rev ) {
				System.out.println(number+"is palindrome");
			}else {
				System.out.println(number+"is not palindrome");
			}

		}

	}

}
